.foot-content {
  position: fixed;
  bottom: 42rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  z-index: 99;
}

.foot-content-block {
  height: 200rpx;
}

.foot-content-button {
  width: 452rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #ffffff;
  text-align: center;
  box-shadow: 0px 6rpx 12rpx rgba(39, 120, 255, 0.16);
  border-radius: 28rpx;
}

.loading-postion {
  width: 100%;
  height: 92vh;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-row {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.center-body {
  padding: 20rpx 26rpx;
}

.center-item {
  height: 222rpx;
  padding: 30rpx 26rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.center-item-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: 800;
  margin-bottom: 12rpx;
  width: 375rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.center-item-text,
.center-item-time {
  color: #666666;
  font-weight: 400;
}

.center-item-time {
  font-size: 24rpx;
}

.center-item-text {
  font-size: 26rpx;
}

.center-item-viewtext {
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  opacity: 0.7;
  border-radius: 200rpx;
}

.error {
  border: 1rpx solid #FF4949;
  color: #FF4949;
}

.success {
  border: 1px solid #2778FF;
  color: #2778FF;
}

.row_content {
  border-bottom: 1rpx solid #F2F2F2;
}
.batch_label {
  height: 82rpx;
  font-size: 30rpx;
  color: #707070;
  padding-left: 26rpx;
  padding-bottom: 15rpx;
}